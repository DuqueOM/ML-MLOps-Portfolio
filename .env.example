# Portfolio-wide Environment Variables
# Copy this to .env and customize per project

# Reproducibility seed (used by common_utils/seed.py)
SEED=42

# Test seed (used in pytest)
TEST_SEED=42

# Python environment
PYTHONHASHSEED=42

# MLflow tracking
MLFLOW_TRACKING_URI=file:./mlruns

# Logging level
LOG_LEVEL=INFO

# API configuration (example values)
API_HOST=0.0.0.0
API_PORT=8000

# DVC remote (if using)
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret
# DVC_REMOTE=s3://your-bucket/path
